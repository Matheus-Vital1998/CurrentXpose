@model FiltrosViewModel

@{
    ViewData["Title"] = "Tela de Historico Sindico";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/morador/historico.css">
    <link rel="stylesheet" href="~/css/barra-lateral/lateral.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>

<body>
    <div class="open-btn" onclick="toggleSidebar()">☰</div>

    @{
        await Html.RenderPartialAsync("~/Views/BarraLateral/LateralSindico.cshtml");
    }

    <div class="content">
        <button class="filtro-expandir" id="toggleFilter" onclick="toggleFilterVisibility()">Expandir filtro</button>

        <div class="filtro-container" id="filtroContainer" style="display: none;">
            <form asp-controller="NomeDoSeuController" asp-action="HistoricoSindico" method="get">
                <label class="filtro-label" for="dataInicio">Data Início:</label>
                <input class="filtro-input" type="date" asp-for="DataInicio">

                <label class="filtro-label" for="dataFim">Data Fim:</label>
                <input class="filtro-input" type="date" asp-for="DataFim">

                <label class="filtro-label" for="condominioId">Condomínio:</label>
                <select class="filtro-input" asp-for="CondominioId" id="condominioId" name="CondominioId">
                </select>

                <label class="filtro-label" for="predioId">Prédio:</label>
                <select class="filtro-input" asp-for="PredioId" id="predioId" name="PredioId">
                </select>

                <button class="filtro-button" type="submit">Pesquisar</button>
            </form>
        </div>

        <div id="grafico">
            <h2>Consumo de Energia</h2>
            <canvas id="historicoSindicoChart" width="400" height="200"></canvas>
        </div>

        <div id="descricao">
            <p>Descrição do gráfico de consumo de energia, local e período.</p>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="site.js"></script>
        <script>
            iniciarGrafico();
            carregarCondominios();
            carregarPredios();

            function toggleFilterVisibility() {
                var filtroContainer = document.getElementById("filtroContainer");
                filtroContainer.style.display = (filtroContainer.style.display === "none") ? "flex" : "none";
            }

            function carregarCondominios() {
                $.ajax({
                    url: '/api/Condominios', 
                    type: 'GET',
                    success: function (data) {
                        var selectCondominio = document.getElementById('condominioId');
                        selectCondominio.innerHTML = "";
                        for (var i = 0; i < data.length; i++) {
                            var option = document.createElement('option');
                            option.value = data[i].Id;
                            option.text = data[i].Nome;
                            selectCondominio.appendChild(option);
                        }
                    },
                    error: function (error) {
                        console.error('Erro ao carregar opções de condomínio:', error);
                    }
                });
            }

            function carregarPredios() {
                $.ajax({
                    url: '/api/Prédios', 
                    type: 'GET',
                    success: function (data) {
                        var selectPredio = document.getElementById('predioId');
                        selectPredio.innerHTML = "";
                        for (var i = 0; i < data.length; i++) {
                            var option = document.createElement('option');
                            option.value = data[i].Id;
                            option.text = data[i].Nome;
                            selectPredio.appendChild(option);
                        }
                    },
                    error: function (error) {
                        console.error('Erro ao carregar opções de prédio:', error);
                    }
                });
            }
        </script>
    </div>
</body>

</html>