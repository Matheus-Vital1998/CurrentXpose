@model MoradorViewModel;

@{
    ViewData["Title"] = "Tela Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login/login.css">
    <title>Login</title>
</head>
<body class="login-bg">
    <div class="login-container">
        <form class="login-form" method="post" asp-action="Inicial" asp-controller="Morador">
            <h1>Login</h1>
            <label for="username">Username:</label>
            <input type="text" asp-for="Login" id="username" asp-for="Login" required>
            <label for="password">Password:</label>
            <input type="password" asp-for="Senha" id="password" asp-for="Senha" required>
            <button type="submit">Login</button>
            <div class="text-center">
                <a class="link" asp-action="TrocarSenha" asp-controller="Login">Esqueceu a senha</a>
            </div>
        </form>
    </div>
</body>
</html>